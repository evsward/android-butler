<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="setLucencyBackground" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">#0000</item>
    </style>

    <style name="TitleBarBackground">
        <item name="android:background">@drawable/shape_blue_gradual_login</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#4D96CB</item>
    </style>

    <!-- my custom bar -->
    <style name="MyCustomTheme" parent="AppTheme">
        <item name="android:windowTitleBackgroundStyle">@style/TitleBarBackground</item>
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowActionBar">false</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <!-- 比赛管理标题栏 -->
    <style name="MyTheme" parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="customButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/shape_custom_button</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="vertical_layout">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="horizontal_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="table_avatar_fixed">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="mainui_privilege_style">
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/shape_corner_orange_gray_circular_border</item>
        <item name="android:padding">4dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="mainui_button_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="mainui_button_style">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="tv_info_text_style">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="tv_info_number_style">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>