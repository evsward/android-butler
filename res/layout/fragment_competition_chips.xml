<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/showNFCMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/fragment_comp_chips_input_chip"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <org.droidparts.widget.ClearableEditText
            android:id="@+id/keyWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="@string/fragment_comp_chips_input_cardNo_search" />

        <Button
            android:id="@+id/searchPlayerChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_gradual_login"
            android:minHeight="30dp"
            android:minWidth="50dp"
            android:padding="0dp"
            android:text="@string/fragment_comp_chips_search"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chipsListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="@drawable/shape_white_border"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/fragment_comp_chips_cardNo"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:background="@drawable/shape_white_border_without_left"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/fragment_comp_chips_name"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@drawable/shape_white_border_without_left"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/fragment_comp_chips_telNo"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/shape_white_border_without_left"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/fragment_comp_chips_chipsCount"
            android:textSize="21sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/chipsListInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>