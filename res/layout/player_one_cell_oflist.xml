<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/playerNO"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:background="@drawable/shape_white_border_without_top"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="000001"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/playerCardNO"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:background="@drawable/shape_white_border_without_left_top"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="123456789"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="35"
        android:background="@drawable/shape_white_border_without_left_top"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="XXXXXXXX"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/playerTableSeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:background="@drawable/shape_white_border_without_left_top"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="2/25"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/playerChip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:background="@drawable/shape_white_border_without_left_top"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="10000"
        android:textSize="18sp" />

</LinearLayout>