<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_tvone_deep_blue_gradual"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/matchSeatTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@drawable/shape_white_border_gradual_blue"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/tv_seat_title_series"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/shape_white_border_without_left_gradual_blue"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/tv_seat_title_card_no"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/shape_white_border_without_left_gradual_blue"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/tv_seat_title_player_name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/shape_white_border_without_left_gradual_blue"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/tv_seat_title_table_seat_no"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/shape_white_border_without_left_gradual_blue"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/tv_seat_title_chip_amount"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/matchSeatListInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_tvone_deep_blue_gradual" >
    </ListView>

</LinearLayout>