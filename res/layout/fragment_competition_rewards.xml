<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/fragment_comp_rewards_rewardInfo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_border"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/firstCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_comp_rewards_playerCount"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/playersNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/empty_hint"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_comp_rewards_RewardCount"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/totalBonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/empty_hint"
                    android:textSize="21sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/firstCell"
            android:layout_below="@id/firstCell" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_comp_rewards_RewardPlayerCount"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/awardNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/empty_hint"
                android:textSize="21sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rewardListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:background="@drawable/shape_white_border"
            android:gravity="center_horizontal"
            android:text="@string/fragment_comp_rewards_position"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:background="@drawable/shape_white_border_without_left"
            android:gravity="center_horizontal"
            android:text="%"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="@drawable/shape_white_border_without_left"
            android:gravity="center_horizontal"
            android:text="@string/fragment_comp_rewards_reward"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/shape_white_border_without_left"
            android:gravity="center_horizontal"
            android:text="@string/fragment_comp_rewards_playerName"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:background="@drawable/shape_white_border_without_left"
            android:gravity="center_horizontal"
            android:text="@string/fragment_comp_rewards_cardNo"
            android:textSize="21sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/prizeListInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>