<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006cff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp" >

        <TextView
            android:id="@+id/TVMemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="30dp"
            android:hint="@string/empty_hint"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvCompInfoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TVMemName"
            android:layout_centerHorizontal="true"
            android:text="@string/tv_check_entrance_compinfo"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/welocomemsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/TVMemName"
            android:layout_alignLeft="@id/tvCompInfoName"
            android:text="@string/tv_check_entrance_welcomeinfo"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="normal" />
    </RelativeLayout>

</LinearLayout>