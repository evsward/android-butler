<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Border -->
    <item>
        <shape>
            <solid android:color="#000000" >
            </solid>
        </shape>
    </item>
    <!-- Body -->
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:left="1dp">
        <shape>
            <solid android:color="#F9F900" >
            </solid>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</layer-list>